@model IEnumerable<TaskManager.Models.TaskNote>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TaskNotes" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus"></i> &nbsp; Create New Task
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Comment
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Description</td>
                        <td width="30%">@item.Comment</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="TaskNotes" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="TaskNotes" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i> 
                                </a>
                            </div>
                        </td>-
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>